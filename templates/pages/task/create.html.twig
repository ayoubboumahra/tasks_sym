{% extends './layouts/app.html.twig' %}

{% block title "Create task" %}

{% block content %}

    <div>

        <a class="btn btn-primary float-right" href="{{ path('app_task_index') }}">Back to the list of tasks</a>

        <h1>Create New Task</h1>

    </div>

    {{ form_start(task_form) }}
        {% block _task_title %}
            <h1>OKOK</h1>
        {% endblock %}
        {{ form_row(task_form.description) }}
        {{ form_row(task_form.priority) }}
        {{ form_row(task_form.assigned_to) }}

    {{ form_end(task_form,) }}

{% endblock %}